<div class="container d-flex justify-content-between align-items-center mt-2 m">
  <h1>Flats</h1>
  <div><%= link_to "New Flat", new_flat_path %></div>
</div>
  <div style="height: 50px;"></div>

<div class="container d-flex flex-direction-row mt-5">
  <% @flats.each do |flat| %>
    <div class="card flat mt-3">
      <img src=<%= flat.img_source %> alt="Flat">
      <h2><%= flat.name %></h2>
      <p><%= link_to "Show this Flat", flat %></p>
    </div>
  <% end %>
</div>
